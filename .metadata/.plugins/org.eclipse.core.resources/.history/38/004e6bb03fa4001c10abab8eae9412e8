<script>
	$(".btnConfirm").on("click",function(){
		if(${empty loggedMember}){
			alert("로그인해야 글을 작성할 수 있습니다.");
			location.href="../member/Login.do";
			return false;
		}
	})
	
	$(".myBoard").on("click",allBoardOn());
	$(".btnBlack").on("click",allBoardOn());
	$(".allBoard").on("click",function(){
		$(".myBoard").removeClass("off").siblings(".allBoard").addClass("off");
		return
	});
	function allBoardOn(){
		$(".myBoard").addClass("off").siblings(".allBoard").removeClass("off");
		return false;
	}
</script>
